<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->


	<style name="EditTextAppTheme" parent="android:Widget.EditText">
	  <!--<item name="android:background">@drawable/apptheme_edit_text_holo_light</item>-->
	  <item name="android:textColor">#000000</item>
  </style>

	<style name="box">
		<item name="android:layout_marginBottom">5dp</item>
		<item name="android:layout_marginRight">5dp</item>
		<item name="android:layout_marginLeft">5dp</item>
		<item name="android:layout_marginTop">5dp</item>
		<item name="android:background">#FFF</item>
	</style>

    <!--<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>-->

    <!--<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>-->

	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="AppTheme_picker" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppBtn" parent="@android:style/Widget.Button">
		<item name="android:height">@dimen/AppBtnHeight</item>
		<item name="android:width">@dimen/AppBtnWidth</item>
		<item name="android:layout_marginTop">@dimen/AppBtnMarginTop</item>
		<item name="android:background">@drawable/app_botton</item>
		<item name="android:layout_marginLeft">@dimen/AppBtnMarginLeft</item>
		<item name="android:layout_marginRight">@dimen/AppBtnMarginRight</item>
	</style>


	<dimen name="AppBtnHeight">40dp</dimen>
	<dimen name="AppBtnWidth">102dp</dimen>
	<dimen name="AppBtnMarginTop">12dp</dimen>
	<dimen name="AppBtnMarginLeft">5dp</dimen>
	<dimen name="AppBtnMarginRight">5dp</dimen>


	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


	<style name="SwitchTextAppearance" parent="@android:style/TextAppearance.Holo.Small">
		<item name="android:textColor">@color/colorPrimaryDark</item>
	</style>



</resources>