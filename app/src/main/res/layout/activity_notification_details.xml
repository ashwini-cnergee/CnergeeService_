<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationDetailsActivity" >

     <include
        android:id="@+id/compl_det_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        layout="@layout/header" />
        
            <include
        android:id="@+id/compl_det_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        layout="@layout/footer" />

            <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/compl_det_footer"
                android:layout_below="@+id/compl_det_header"
                android:layout_marginTop="74dp"
                layout="@layout/complaint_details" />
            
</RelativeLayout>