<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/headerLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        
        android:paddingLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/gradient_drawable"
        android:orientation="horizontal" >
    <TextView
        android:id="@+id/headerViewdata"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:gravity="left|center_vertical"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/inprogimg"
        android:textColor="@color/label_black_color"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingRight="5dp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/headerView"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:layout_toRightOf="@+id/headerViewdata"
        android:gravity="center"
        android:text="@string/default_label"
        android:textColor="@color/label_black_color"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    

    <ImageView
        android:id="@+id/inprogimg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"        
        android:paddingRight="5dp"
        android:src="@drawable/py2" />
    
    

</RelativeLayout>

