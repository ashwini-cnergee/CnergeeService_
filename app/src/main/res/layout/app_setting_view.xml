<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="417dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:padding="20dip"
            android:paddingTop="5dip" >
            
    		  <TextView
                android:id="@+id/TextView03"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/app_label_5"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/label_black_color" />

            <EditText
                android:id="@+id/etCustId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/EditTextAppTheme"
                 android:layout_margin="10dp"
                android:singleLine="true" />
                
               

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                 android:layout_margin="10dp"
                android:text="@string/app_label_2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/label_black_color" />

            <EditText
                android:id="@+id/username"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                 android:layout_margin="10dp"
                style="@style/EditTextAppTheme"
                android:singleLine="true" >
                
               
                </EditText>

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/app_label_3"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/label_black_color" />

            <EditText
                android:id="@+id/password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                style="@style/EditTextAppTheme"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/app_label_4"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/label_black_color" />

            <Spinner
                android:id="@+id/languageList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/AppBtnMarginTop"
                android:gravity="right" >

                <Button
                    android:id="@+id/back"
                    style="@style/AppBtn"
                    android:background="@drawable/relative_selector"
                    android:layout_width="102dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="@string/app_back_btn" />

                <Button
                    android:id="@+id/save"
                    style="@style/AppBtn"
                    android:layout_width="102dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/relative_selector"
                    android:layout_marginTop="@dimen/AppBtnMarginTop"
                    android:text="@string/app_btn_1" />
            </LinearLayout>
        </LinearLayout>
</ScrollView>